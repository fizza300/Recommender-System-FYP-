  <main>
    <article>

      <!-- 
        - #NOVEL DETAIL
      -->

      <section class="novel-detail">
        <div class="container">

          <figure class="novel-detail-banner">


          </figure>

          <div class="novel-detail-content">

            <p class="detail-subtitle">New Release</p>

            <h1 class="h1 detail-title">
              <span>FAVOURITE NOVELS</span>
            </h1>

            <div class="meta-wrapper">

              <button class="btn btn-primary onclick">
                <ion-icon name="book">Read now</ion-icon>
                
              </div>

              <div class="genre-wrapper">
                <a href="#">Drama,</a>
                <a href="#">Thriller,</a>
              </div>

              <div class="date-time">

                <div>
                  <ion-icon name="calendar-outline"></ion-icon>
                  <time datetime="2024">2024</time>
                </div>

                <div>
                  <ion-icon name="time-outline"></ion-icon>
                  <time datetime="PT05H">5 hrs</time>
                </div>

              </div>

            </div>

            <p class="storyline">
              Dive into a world of mystery and intrigue with our latest novel, where unexpected twists and turns await at every corner.
            </p>

            <div class="details-actions">

              <button class="share">
                <ion-icon name="share-social"></ion-icon>

                <span>Share</span>
              </button>

              <div class="title-wrapper">
                <p class="title">Amazon Kindle</p>

                <p class="text">E-book Store</p>
              </div>

              <button class="btn btn-primary">
                <ion-icon name="book"></ion-icon>

                <span>Read Now</span>
              </button>

            </div>

          </div>

        </div>
      </section>

      <section class="top-rated">
        <div class="container">

          <p class="section-subtitle">EXPLORE</p>

          <h2 class="h2 section-title">Top Rated Novels</h2>

          <ul class="filter-list">

            <li>
              <button class="filter-btn">Drama</button>
            </li>

            <li>
              <button class="filter-btn">Thriller</button>
            </li>

            <li>
              <button class="filter-btn">All Novels</button>
            </li>

          </ul>

          <div class="card-container">
            <div class="card-meta">
              <div class="badge badge-outline">Sad Novels</div>
              <a href="https://www.goodreads.com/book/show/4671.The_Great_Gatsby" target="_blank">
                <img src="images/novel-1.png" alt="Drama Novels" class="cover-pic">
                <button class="action-button">Read</button>
              </a>
            </div>

            <div class="card-meta">
              <div class="badge badge-outline">Happy Novels</div>
              <a href="https://www.goodreads.com/book/show/1618.The_Silence_of_the_Lambs" target="_blank">
                <img src="images/novel1.png" alt="Thriller Novels" class="cover-pic">
                <button class="action-button">Read</button>
              </a>
            </div>

            <div class="card-meta">
              <div class="badge badge-outline">All Novels</div>
              <a href="https://www.goodreads.com/list/show/1.Best_Books_Ever" target="_blank">
                <img src="images/novel2.png" alt="All Novels" class="cover-pic">
                <button class="action-button">Read</button>
              </a>
            </div>
          </div>

        </div>
      </section>

    </article>
